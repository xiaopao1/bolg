<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiming.blog.dao.mapper.CommentMapper">

    <select id="getFirstLeverComments" resultType="com.yiming.blog.dao.pojo.Comment">
        select * from ms_comment where article_id = #{articleId} and level = 1
    </select>
    <select id="getChildrenComments" resultType="com.yiming.blog.dao.pojo.Comment">
        select * from ms_comment where parent_id = #{parentId} and level = 2
    </select>
</mapper>